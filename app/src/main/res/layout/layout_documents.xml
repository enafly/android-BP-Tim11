<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ba.unsa.etf.rma.ena.dms_android.MainActivity"
    android:id="@+id/documents_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/all_documents_layout">

        <TextView
            android:id="@+id/textView_uloge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/doc_dokumenti"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/imageButton_add_dokument"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:maxHeight="50dp"
            android:maxWidth="50dp"
            android:scaleType="fitCenter"/>

        <ListView
            android:id="@+id/listView_dokumenti"
            android:layout_width="match_parent"
            android:layout_below="@+id/textView_uloge"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <!--      <include
                  layout="@layout/layout_row_korisnik_options"
                  android:id="@+id/buttons_layout"
                  android:layout_alignParentBottom="true"
                  android:layout_height="wrap_content"
                  android:layout_width="match_parent">
              </include> -->

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
