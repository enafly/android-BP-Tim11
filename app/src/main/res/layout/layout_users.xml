<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ba.unsa.etf.rma.ena.dms_android.MainActivity"
    android:id="@+id/user_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/all_documents_layout">

        <TextView
            android:id="@+id/textView_korisnici"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/user_korisnici"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/imageButton_add_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="true"
            android:maxWidth="50dp"
            android:maxHeight="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/add_user"
            android:background="@color/colorWhite" />

        <ListView
            android:id="@+id/listView_korisnici"
            android:layout_width="match_parent"
            android:layout_below="@+id/textView_korisnici"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <include
            layout="@layout/layout_row"
            android:id="@+id/buttons_layout"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
        </include>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>